{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2016.array.include", "es2017", "es7"],
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules", "build", "test"]
}
